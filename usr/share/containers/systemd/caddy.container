[Unit]
Description=Run a demo webserver

[Container]
PodmanArgs=--storage-opt=additionalimagestore=/usr/lib/bootc/storage
Image=docker.io/library/caddy:2.8.4
ContainerName=caddy
PublishPort=80:80
Volume=/usr/share/caddy/config:/etc/caddy/
Volume=/usr/share/caddy/data:/data

[Service]
Restart=always
TimeoutStartSec=900

[Install]
WantedBy=multi-user.target
